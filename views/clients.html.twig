<!DOCTYPE html>
<html>
    {% include "partials/clients_header.html" %}
    <body>
        <div class="container">
            <h1 id="brand">Clients</h1>
            <div class="row">
                <div class="col-md-6">
                    <h3>Clients</h3>
                    {% if clients is not empty %}
                        <ul class="list-group">
                            {% for client in clients %}
                                <li class="list-group-item">
                                    <a href="/clients/{{ client.getId }}"> {{ client.getClientName }} </a></li>
                            {% endfor %}
                        </ul>
                        <form action='/delete_clients' method='post'>
                            <button class="btn btn-danger" type='submit'>Delete All</button>
                        </form>
                    {% else %}
                    <p><em>There are currently no clients</em></p>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h3>Add New</h3>
                    {% include "partials/client_form.html"%}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <br><hr>
                    <form action="/">
                        <button type="submit" class="btn btn-default">Go Back</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
